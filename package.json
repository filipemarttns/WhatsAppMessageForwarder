{
  "name": "whatsapp-forwarder-bot",
  "version": "3.0.0",
  "description": "A WhatsApp bot to forward messages from one group to another using Baileys.",
  "main": "src/index_baileys.js",
  "scripts": {
    "start": "node src/index_baileys.js",
    "clean": "node clean.js",
    "build": "npm run clean && npm install && npm run build:baileys",
    "build:baileys": "node build_baileys.js",
    "build:exe": "build.bat",
    "build:pkg": "pkg src/index_baileys.js --targets node18-win-x64,node18-linux-x64 --output bin/whatsapp-forwarder",
    "test": "node src/test.js"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "pino": "^9.2.0",
    "qrcode-terminal": "^0.12.0",
    "@whiskeysockets/baileys": "^6.5.0",
    "dotenv": "^16.4.5",
    "ws": "^8.14.2",
    "fs-extra": "^11.2.0"
  },
  "devDependencies": {
    "pkg": "^5.8.1"
  },
  "pkg": {
    "scripts": [
      "src/**/*.js"
    ],
    "assets": [
      "package.json"
    ],
    "targets": [
      "node18-win-x64",
      "node18-linux-x64"
    ],
    "outputPath": "dist"
  }
}